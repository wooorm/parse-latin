{
  "name": "parse-latin",
  "version": "4.2.0",
  "description": "Latin-script (natural language) parser",
  "license": "MIT",
  "keywords": [
    "nlcst",
    "latin",
    "script",
    "natural",
    "language",
    "parser"
  ],
  "repository": "wooorm/parse-latin",
  "bugs": "https://github.com/wooorm/parse-latin/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "files": [
    "lib",
    "index.js"
  ],
  "dependencies": {
    "nlcst-to-string": "^2.0.0",
    "unist-util-modify-children": "^1.0.0",
    "unist-util-visit-children": "^1.0.0"
  },
  "devDependencies": {
    "browserify": "^16.0.0",
    "is-hidden": "^1.0.1",
    "negate": "^1.0.0",
    "nlcst-test": "^1.0.0",
    "nyc": "^14.0.0",
    "prettier": "^1.12.1",
    "regenerate": "^1.3.1",
    "remark-cli": "^6.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "tape": "^4.0.0",
    "tinyify": "^2.5.0",
    "unicode-12.1.0": "^0.8.0",
    "unist-util-remove-position": "^1.1.0",
    "vfile": "^4.0.0",
    "xo": "^0.24.0"
  },
  "scripts": {
    "generate": "node script/build-expressions",
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "build-bundle": "browserify . -s ParseLatin -o parse-latin.js",
    "build-mangle": "browserify . -s ParseLatin -p tinyify -o parse-latin.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test/index.js",
    "test": "npm run generate && npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "no-misleading-character-class": "off",
      "no-useless-escape": "off",
      "guard-for-in": "off",
      "max-depth": "off",
      "unicorn/no-hex-escape": "off"
    },
    "ignores": [
      "parse-latin.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
