{
  "name": "parse-latin",
  "version": "4.1.1",
  "description": "Latin-script (natural language) parser",
  "license": "MIT",
  "keywords": [
    "nlcst",
    "latin",
    "script",
    "natural",
    "language",
    "parser"
  ],
  "repository": "wooorm/parse-latin",
  "bugs": "https://github.com/wooorm/parse-latin/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "files": [
    "lib",
    "index.js"
  ],
  "dependencies": {
    "nlcst-to-string": "^2.0.0",
    "unist-util-modify-children": "^1.0.0",
    "unist-util-visit-children": "^1.0.0"
  },
  "devDependencies": {
    "browserify": "^16.0.0",
    "bundle-collapser": "^1.2.1",
    "esmangle": "^1.0.1",
    "is-hidden": "^1.0.1",
    "negate": "^1.0.0",
    "nlcst-test": "^1.0.0",
    "nyc": "^11.0.0",
    "prettier": "^1.12.1",
    "regenerate": "^1.3.1",
    "remark-cli": "^5.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "tape": "^4.0.0",
    "unicode-8.0.0": "^0.7.0",
    "unist-util-remove-position": "^1.1.0",
    "vfile": "^2.0.0",
    "xo": "^0.20.0"
  },
  "scripts": {
    "generate": "node script/build-expressions",
    "format": "remark . -qfo && prettier --write '**/*.js' && xo --fix",
    "build-bundle": "browserify index.js -p bundle-collapser/plugin --bare -s ParseLatin > parse-latin.js",
    "build-mangle": "esmangle parse-latin.js > parse-latin.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test/index.js",
    "test": "npm run generate && npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "no-useless-escape": "off",
      "guard-for-in": "off",
      "max-depth": "off",
      "no-var": "off",
      "object-shorthand": "off",
      "prefer-arrow-callback": "off",
      "unicorn/number-literal-case": "off",
      "unicorn/no-hex-escape": "off"
    },
    "ignores": [
      "parse-latin.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
